import matplotlib.pyplot as plt


def read_data(file_path):
    data = []
    with open(file_path, 'r') as file:
        for line in file:
            value = float(line.strip())
            data.append(value)
    return data


with open('data.txt', 'r') as file:
    lines = file.readlines()
    x = [float(val) for val in lines[0].split()]
    y = [float(val) for val in lines[1].split()]


file_path1 = 'data1.txt'
c = read_data(file_path1)

print(x)
print(y)

plt.scatter(x, y, label='Data Points')
plt.scatter(c[0], c[1], color='red', label='Calculated Point (c[0], c[1])')

plt.xlabel('X-axis')
plt.ylabel('Y-axis')
plt.title('Scatter Plot with Calculated Point')
plt.legend()
plt.show()
